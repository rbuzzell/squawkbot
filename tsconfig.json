{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "lib": [
      "es6",
      "dom"
    ],
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules"
  ]
}
